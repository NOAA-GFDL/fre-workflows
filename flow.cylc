                    epmt -v annotate EPMT_DATA_LINEAGE_OUT="${compressed_bytes%*,}"
                    echo "[DATA LINEAGE] Annotated output files to EPMT_LINEAGE_OUT"
                fi
            fi

            echo "Natural end of the history file staging"
            exit 0
