{% if DO_REGRID %}
rename-split-to-pp-regrid<regrid>
    {% for SEGMENT in range(1, HIST_SEGMENTS_PER_CHUNK_A) %}
& rename-split-to-pp-regrid<regrid>[{{ HISTORY_SEGMENT | multiply_duration(-SEGMENT) }}]
