                    else
                        find $dir -type f -name "*.*-$(cylc cycle-point --template CCYY --offset={{ PP_CHUNK_A | multiply_duration(-CHUNK) }})*.nc" -print -delete
                    fi
    {% endfor %}
{% else %}
                    if [[ {{ PP_CHUNK_A }} == P1Y ]]; then
                        find $dir -type f -name "*.$(cylc cycle-point --template CCYY)*.nc" -print -delete
                    else
                        find $dir -type f -name "*.*-$(cylc cycle-point --template CCYY)*.nc" -print -delete
                    fi
{% endif %}
                fi
            done
        """

